<Window x:Class="Casino.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Casino"
        mc:Ignorable="d"
        Title="MishaCasino" MinHeight="500" MinWidth="800"
        Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btnGoBack" Content="Назад" Click="btnGoBack_Click"/>
            <Button x:Name="btnLogout" Content="Выйти" Click="btnLogout_Click"/>
        </StackPanel>

        <Frame x:Name="frame" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Window>
